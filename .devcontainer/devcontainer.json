{
    "name": "BPFman Debug Environment",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "runArgs": [
        "--network=host",
        "--privileged",
        "--cap-add=SYS_ADMIN",
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined"
    ],
    "mounts": [
        "source=/usr/src,target=/usr/src,type=bind,readonly",
        "source=/lib/modules,target=/lib/modules,type=bind,readonly",
        "source=/sys/kernel/debug,target=/sys/kernel/debug,type=bind",
        "source=/root/ebpf,target=/root/ebpf,type=bind"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "vadimcn.vscode-lldb",
                "rust-lang.rust-analyzer",
                "tamasfe.even-better-toml",
                "golang.go",
                "zxh404.vscode-proto3"
            ],
            "settings": {
                "rust-analyzer.check.command": "clippy",
                "lldb.executable": "/usr/bin/lldb"
            }
        }
    },
    "postCreateCommand": "rustup component add rust-src rustfmt clippy",
    "postStartCommand": "mount -t bpf bpffs /sys/fs/bpf"
}